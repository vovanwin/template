# Docker compose environment for local infra
POSTGRES_VERSION=16
DATA_PATH_HOST=./data
POSTGRES_ENTRYPOINT_INITDB=./postgres/docker-entrypoint-initdb.d
POSTGRES_PORT=5432
POSTGRES_DB=template
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ------------------------------------------------------------------
# ------------------------------------------------------------------
# ------------------------------------------------------------------


# Application configuration (APP)
APP_HOST=localhost
APP_PORT=8080
APP_ENV=local
APP_CONTEXT_TIMEOUT=1m
APP_READ_HEADER_TIMEOUT=60s
APP_GRACE_FUL_TIMEOUT=8s

# Server components
APP_HTTP_PORT=8080
APP_GRPC_PORT=8081
APP_DEBUG_PORT=8082
APP_SWAGGER_PORT=8084

# Feature flags (enable/disable components)
APP_ENABLE_HTTP=true
APP_ENABLE_GRPC=true
APP_ENABLE_DEBUG=true
APP_ENABLE_SWAGGER=true
APP_ENABLE_TEMPORAL=true

# Logging
APP_LOG_LEVEL=DEBUG

# Postgres
APP_HOST_PG=localhost
APP_PORT_PG=5432
APP_USER_PG=default
APP_PASSWORD_PG=secret
APP_SCHEME_PG=public
APP_DBNAME_PG=rcomv

# RabbitMQ
APP_AMQP_URI=amqp://guest:guest@localhost:5672

# JWT
APP_SIGN_KEY=secret
APP_TOKEN_TTL=20000m
APP_REFRESH_TOKEN_TTL=20000m

# TEMPORAL
APP_TEMPORAL_HOST=localhost
APP_TEMPORAL_PORT=7233
APP_TEMPORAL_NAMESPACE=default
APP_TEMPORAL_TASK_QUEUE=default-task-queue

APP_SESSION_STORE=postgres
APP_SESSION_LIFETIME="24h"